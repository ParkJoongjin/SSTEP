<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F1F1F1"
    android:id="@+id/paperview_L1">

    <!-- top_보건증 상세 -->
    <FrameLayout
        android:id="@+id/paperview_F1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/paperview_toptv"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:background="@color/lightblue"
            android:gravity="center_horizontal|center_vertical"
            android:text="보건증 상세"
            android:textColor="@color/white"
            android:textSize="17sp" />

        <!-- 뒤로가기 아이콘 -->
        <ImageView
            android:id="@+id/paperview_backiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/yicon_back" />

        <!-- 홈 아이콘 -->
        <ImageView
            android:id="@+id/paperview_homeiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/yicon_home" />
    </FrameLayout>

    <!-- 보건증 상세, 버튼 포함 L-->
    <LinearLayout
        android:id="@+id/paperview_L3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="15dp">

        <!-- 보건증 상세 L -->
        <LinearLayout
            android:id="@+id/paperview_L4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/yroundrec_w"
            android:orientation="vertical"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">
            <!-- 버튼 HL -->
            <LinearLayout
                android:id="@+id/paperview_HL1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <!-- 왼쪽 버튼 -->
                <ImageButton
                    android:id="@+id/paperview_leftbtn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/yicon_left" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <!-- 회차 text -->
                <TextView
                    android:id="@+id/paperview_tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquareneo_deb"
                    android:text="1회차"
                    android:textColor="#737373"
                    android:textSize="13sp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <!-- 새로고침 버튼 -->
                <ImageButton
                    android:id="@+id/paperview_refreshbtn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/yicon_refresh" />
                <!-- 오른쪽 버튼 -->
                <ImageButton
                    android:id="@+id/paperview_rightbtn3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/yicon_right" />
            </LinearLayout> <!-- 버튼 HL -->

            <!-- 보건증 상세 정보 F -->
            <FrameLayout
                android:id="@+id/paperview_F2"
                android:layout_width="330dp"
                android:layout_height="289dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:background="@drawable/yline_paper">

                <!-- 성명 text -->
                <TextView
                android:id="@+id/paperview_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="17dp"
                android:text="성명"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold"/>
                <TextView
                    android:id="@+id/paperview_nametv1"
                    android:layout_width="215dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="17dp"
                    android:text="김유경"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:gravity="center_horizontal" />

                <!-- 회차 text -->
                <TextView
                    android:id="@+id/paperview_tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="68dp"
                    android:text="회차"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/paperview_numtv2"
                    android:layout_width="215dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="68dp"
                    android:text="12회차"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:gravity="center_horizontal"/>

                <!-- 검진일 text -->
                <TextView
                    android:id="@+id/paperview_tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="119dp"
                    android:text="검진일"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/paperview_datetv3"
                    android:layout_width="215dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="119dp"
                    android:text="2023.02.09"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:gravity="center_horizontal"/>

                <!-- 사진 text -->
                <TextView
                    android:id="@+id/paperview_tv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="33dp"
                    android:layout_marginTop="210dp"
                    android:text="검진일"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold"/>

                <ImageView
                android:id="@+id/paperview_photoiv1"
                android:layout_width="194dp"
                android:layout_height="100dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="170dp"
                android:background="@drawable/yroundrec_w_sg"/>
            </FrameLayout> <!-- 보건증 상세 정보 F -->
            <TextView
                android:id="@+id/paperview_inputdatetv4"
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:text="입력일자 : 2023.02.09"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:layout_gravity="right"
                android:gravity="right"/>
        </LinearLayout> <!-- 보건증 상세 L -->
        <LinearLayout
            android:id="@+id/paperview_HL2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="30dp">
            <Button
                android:id="@+id/paperview_modibtn1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/yroundrec2_b"
                android:text="수정하기"
                android:textColor="@color/white"
                android:layout_gravity="left"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <Button
                android:id="@+id/paperview_rebtn2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/yroundrec2_w_sb"
                android:text="갱신하기"
                android:textColor="@color/black"
                android:layout_gravity="right"/>
        </LinearLayout>
    </LinearLayout> <!-- 보건증 상세, 버튼 포함 L -->
</LinearLayout>